{
  "compilerOptions": {
    "types": ["node", "express", "./global-types.d.ts"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*", "global-types.d.ts"]
}
